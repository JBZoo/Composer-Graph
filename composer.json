{
    "name"              : "jbzoo/composer-graph",
    "type"              : "library",
    "description"       : "Render composer.json dependencies ad graph",
    "license"           : "MIT",

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"           : {
        "php"               : ">=7.2",
        "jbzoo/data"        : "4.0.x-dev",
        "jbzoo/mermaid-php" : "2.0.x-dev",
        "jbzoo/utils"       : "4.0.x-dev",

        "symfony/console"   : "^4.4||^5.0"
    },

    "require-dev"       : {
        "jbzoo/phpunit"             : "4.0.x-dev",
        "jbzoo/codestyle"           : "2.0.x-dev",
        "roave/security-advisories" : "dev-master",
        "symfony/process"           : "^4.4||^5.0"
    },

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\ComposerGraph\\" : "src"
        }
    },

    "autoload-dev"      : {
        "classmap" : ["tests"]
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "bin"               : ["jbzoo-composer-graph"],

    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.0.x-dev"
        }
    }
}
