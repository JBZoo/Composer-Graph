{
    "name"         : "jbzoo/composer-graph",
    "type"         : "library",
    "description"  : "Render composer.json dependencies ad graph",
    "license"      : "MIT",

    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"      : {
        "php"                    : ">=7.2",

        "jbzoo/data"             : "^4.1.3",
        "jbzoo/mermaid-php"      : "^2.1.3",
        "jbzoo/utils"            : "^4.2.3",

        "symfony/console"        : ">=4.4",
        "symfony/polyfill-php80" : "^1.22.1"
    },

    "require-dev"  : {
        "jbzoo/phpunit"               : "^4.6.2",
        "jbzoo/codestyle"             : "^2.10.0",
        "jbzoo/toolbox-ci"            : "^1.3.5",
        "phpbench/phpbench"           : "^0.17.1",
        "symfony/process"             : ">=4.4",
        "symfony/var-dumper"          : "^4.4|^5.2.5",
        "php-coveralls/php-coveralls" : "^2.4.3",
        "roave/security-advisories"   : "dev-master"
    },

    "autoload"     : {
        "psr-4" : {
            "JBZoo\\ComposerGraph\\" : "src"
        }
    },

    "autoload-dev" : {
        "classmap" : ["tests"]
    },

    "bin"          : ["composer-graph"],

    "config"       : {
        "optimize-autoloader" : true,
        "platform"            : {
            "php" : "7.2.15"
        }
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    }
}
