{
    "name"         : "jbzoo/composer-graph",
    "type"         : "library",
    "description"  : "Render composer.json + composer.lock dependencies graph",
    "license"      : "MIT",
    "keywords"     : [
        "composer", "diagram", "jbzoo", "dependencies", "composer-dependency", "composer-packages", "mermaidjs",
        "composer-graph", "graph"
    ],

    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"      : {
        "php"               : "^7.2|^8.0",

        "jbzoo/data"        : "^4.3.0",
        "jbzoo/mermaid-php" : "^2.3.0",
        "jbzoo/utils"       : "^4.5.1",

        "symfony/console"   : ">=4.4"
    },

    "require-dev"  : {
        "jbzoo/toolbox-dev" : "^3.1.0",
        "symfony/process"   : ">=4.4"
    },

    "autoload"     : {
        "psr-4" : {
            "JBZoo\\ComposerGraph\\" : "src"
        }
    },

    "autoload-dev" : {
        "classmap" : ["tests"]
    },

    "bin"          : ["composer-graph"],

    "config"       : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {
            "composer/package-versions-deprecated" : true
        }
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    }
}
