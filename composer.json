{
    "name"              : "jbzoo/composer-graph",
    "type"              : "library",
    "description"       : "Render composer.json dependencies ad graph",
    "license"           : "MIT",

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"           : {
        "php"               : ">=7.2",

        "jbzoo/data"        : "^4.1.2",
        "jbzoo/mermaid-php" : "^2.1.3",
        "jbzoo/utils"       : "^4.2.3",

        "symfony/console"   : "^4.4||^5.0"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^2.6.1",
        "symfony/process"   : "^4.4||^5.0"
    },

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\ComposerGraph\\" : "src"
        }
    },

    "autoload-dev"      : {
        "classmap" : ["tests"]
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "bin"               : ["composer-graph"],

    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    }
}
